<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yangj.en_0617.EJoinActivity">

    <RelativeLayout
          android:layout_width="368dp"
          android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etJoinID"
            android:layout_alignStart="@+id/etJoinID"
            android:layout_marginBottom="58dp"
            android:layout_marginStart="44dp"

            android:text="등록" />

        <EditText
            android:id="@+id/etJoinID"
            android:layout_width="219dp"
            android:layout_height="61dp"
            android:layout_above="@+id/etJoinPassword"
            android:layout_alignStart="@+id/etJoinPassword"
            android:layout_marginBottom="46dp"
            android:hint="E-MAIL"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="201dp" />

        <EditText
            android:id="@+id/etJoinPassword"
            android:layout_width="226dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="179dp"
            android:layout_marginStart="57dp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="303dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etJoinID"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="89dp"
            android:layout_marginEnd="17dp"
            android:text="회원가입창입니다." />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
